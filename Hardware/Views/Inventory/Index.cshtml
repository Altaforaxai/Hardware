@model List<Hardware.Models.NewInventoryC>

<h1>Inventory History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Type</th>
            <th>Date</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Name</td>
                <td>@entry.Type</td>
                <td>@entry.Date.ToString("yyyy-MM-dd")</td>
                <td>@entry.Quantity</td>
                <td>@entry.UnitPrice.ToString()</td>
                <td>@(entry.Quantity * entry.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="DeleteAll" method="post" onsubmit="return confirm('Are you sure you want to delete all inventory history?');">
    <button type="submit" class="btn btn-danger">Clear History</button>
</form>

<a asp-controller="Product" asp-action="Index" class="btn btn-primary ml-2">Back to Main</a>
