@model Hardware.Models.Inventory

<h2>Edit Inventory</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Product.Name">Product</label>
        <input type="text" class="form-control" value="@Model.Product.Name" disabled />
    </div>
    <div class="form-group">
        <label asp-for="CurrentQuantity">Current Quantity</label>
        <input asp-for="CurrentQuantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsSold">Units Sold</label>
        <input asp-for="UnitsSold" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsPurchased">Units Purchased</label>
        <input asp-for="UnitsPurchased" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
