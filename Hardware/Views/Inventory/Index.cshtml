@model List<Hardware.Models.NewInventoryC>

<h1>History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Type</th>
            <th>Date</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Name</td>
                <td>@entry.Type</td>
                <td>@entry.Date.ToString("yyyy-MM-dd")</td>
                <td>@entry.Quantity</td>
                <td>@entry.UnitPrice.ToString()</td>
                <td>@(entry.Quantity * entry.UnitPrice)</td>
                <!-- Add more columns as needed -->
            </tr>
        }
    </tbody>
 
</table>
   </div>
<a asp-controller="Product" asp-action="Index" class="btn btn-primary ml-2">Back to Main</a>
