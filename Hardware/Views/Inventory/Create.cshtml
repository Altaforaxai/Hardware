@model Hardware.Models.Inventory

<h2>Create or Edit Inventory</h2>

@if (Model.ProductId > 0)
{
    <h3>Edit Inventory</h3>
}
else
{
    <h3>Create Inventory</h3>
}

<form asp-action="@((Model.ProductId > 0) ? "Edit" : "Create")" method="post">
    @if (Model.ProductId > 0)
    {
        <input type="hidden" asp-for="ProductId" />
    }
    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
            <option>Please select a product...</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CurrentQuantity">Current Quantity</label>
        <input asp-for="CurrentQuantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsSold">Units Sold</label>
        <input asp-for="UnitsSold" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsPurchased">Units Purchased</label>
        <input asp-for="UnitsPurchased" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
