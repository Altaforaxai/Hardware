@model Hardware.Models.Inventory

<h2>Inventory Details</h2>

<div>
    <h4>Product Name: @Model.Product.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Current Quantity:</dt>
        <dd class="col-sm-10">@Model.CurrentQuantity</dd>

        <dt class="col-sm-2">Units Sold:</dt>
        <dd class="col-sm-10">@Model.UnitsSold</dd>

        <dt class="col-sm-2">Units Purchased:</dt>
        <dd class="col-sm-10">@Model.UnitsPurchased</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
